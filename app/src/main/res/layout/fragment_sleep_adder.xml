<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_sleep_adder_ll"
    android:gravity="center_horizontal"
    app:layout_constraintHorizontal_bias="0.5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sleep_buttons_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_buttons_row">

        <TextView
            android:id="@+id/sleep_from_tw"
            android:layout_height="wrap_content"
            android:text="Sleep From:"
            android:layout_width="wrap_content" />

        <EditText
        android:id="@+id/sleep_time_et"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:elevation="0dp"
        android:fontFamily="false"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="time"
        android:text="12:34"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="visible" />

        <TextView
            android:id="@+id/sleep_to_tw"
            android:layout_height="wrap_content"
            android:text="To:"
            android:layout_width="wrap_content" />

        <EditText
            android:id="@+id/sleep_time_end_et"
            android:layout_width="86dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:elevation="0dp"
            android:fontFamily="false"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="time"
            android:text="13:35"
            android:textAlignment="center"
            android:textSize="18sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/store_sleep_button"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Store"  />

        <!-- TODO: Change this one to visible -->
        <Button
            android:id="@+id/clear_sleep_all"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorAccent"
            android:elevation="0dp"
            android:text="Erase "
            android:visibility="gone" />


        <!--<android.support.constraint.Guideline-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/guideline"-->
        <!--android:orientation="vertical"-->
        <!--tools:layout_editor_absoluteY="0dp"-->
        <!--tools:layout_editor_absoluteX="20dp"-->
        <!--app:layout_constraintGuide_percent="0.052083332" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/sleep_note_tw"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/sleep_time_note_et"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:elevation="0dp"
        android:fontFamily="false"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="time"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="visible" />

</LinearLayout>
